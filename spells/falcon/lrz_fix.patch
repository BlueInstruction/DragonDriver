diff --git a/src/freedreno/vulkan/tu_lrz.cc b/src/freedreno/vulkan/tu_lrz.cc
--- a/src/freedreno/vulkan/tu_lrz.cc
+++ b/src/freedreno/vulkan/tu_lrz.cc
@@ -1,3 +1,4 @@
+/* Dragon: Falcon LRZ Fix - Low Resolution Z buffer fixes */
 
 /* LRZ (Low Resolution Z) optimization fixes */
 
@@ -50,6 +51,22 @@ tu_lrz_init(struct tu_cmd_buffer *cmd)
    /* LRZ initialization fixes */
+   
+   /* Ensure proper LRZ buffer alignment */
+   cmd->state.lrz.buffer_align = 4096;
+   
+   /* Fix LRZ direction tracking */
+   cmd->state.lrz.direction = TU_LRZ_UNKNOWN;
+   cmd->state.lrz.prev_direction = TU_LRZ_UNKNOWN;
+   
+   /* Enable LRZ fast clear */
+   cmd->state.lrz.fast_clear = true;
 
@@ -100,6 +117,14 @@ tu_lrz_begin_renderpass(struct tu_cmd_buffer *cmd)
    /* LRZ renderpass fixes */
+   
+   /* Reset LRZ state at renderpass begin */
+   cmd->state.lrz.valid = false;
+   cmd->state.lrz.invalidate = true;
+   
+   /* Proper depth bounds handling */
+   if (cmd->state.rb_depth_cntl & A6XX_RB_DEPTH_CNTL_Z_BOUNDS_ENABLE) {
+       cmd->state.lrz.z_bounds_enable = true;
+   }
 
 diff --git a/src/freedreno/vulkan/tu_cmd_buffer.cc b/src/freedreno/vulkan/tu_cmd_buffer.cc
--- a/src/freedreno/vulkan/tu_cmd_buffer.cc
+++ b/src/freedreno/vulkan/tu_cmd_buffer.cc
@@ -1,3 +1,4 @@
+/* Dragon: Falcon LRZ Fix - Command buffer LRZ handling */
 
@@ -200,6 +201,10 @@ tu_cmd_buffer_update_lrz(struct tu_cmd_buffer *cmd)
    /* LRZ update fixes */
+   
+   /* Invalidate LRZ on depth write */
+   if (cmd->state.dirty & TU_CMD_DIRTY_LRZ) {
+       tu_lrz_invalidate(cmd);
+   }
