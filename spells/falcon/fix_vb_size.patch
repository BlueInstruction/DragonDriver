+/*
+ * Falcon fix for vertex buffer size issues
+ * - Ensures large VB uploads don't trigger hangchecks
+ */
+
+void tu_fix_vb_size(struct tu_device *dev)
+{
+    foreach_bo (bo, dev) {
+        if (bo->size > 0x1000000)  // >16MB
+            bo->size = 0x1000000;
+    }
+}
